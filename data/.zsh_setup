if [[ -z $(command -v zsh) ]] \
	|| [[ "$(basename "$SHELL")" != zsh ]];
then
	exit 0
fi

zsh_plugins=()

if [[ -n "$(command -v tmux)" ]]; then
	export ZSH_TMUX_AUTOSTART='true'
	zsh_plugins+=(tmux)
fi

if [[ -n "$(command -v git)" ]]; then
	zsh_plugins+=(git)
fi

plugins=( \
	vi-mode \
	${zsh_plugins[@]} \
)

if [[ $(which zoxide) ]]; then
	eval "$(zoxide init zsh)"
fi

# come from bash have to change the $PATH.
export PATH=$HOME/bin:/usr/local/bin:$PATH
